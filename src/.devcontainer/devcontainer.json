{
  "name": "ROS 2 Development Container",
  "privileged": true,
  "remoteUser": "tim-external",
  "build": {
    "dockerfile": "DockerfileTest",
    "args": {
      "USERNAME": "tim-external"
    }
  },
  "workspaceFolder": "/home/ws",
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/ws/src,type=bind",
  "customizations": {
    "jetbrains": {
      "backend": "Clion"
    }
  },
  "containerEnv": {
    "DISPLAY": "unix:0",
    "ROS_LOCALHOST_ONLY": "1",
    "ROS_DOMAIN_ID": "161",
    "COLCON_DEFAULTS_FILE": "/home/ws/configFiles/defaultColconSettings.yaml"
  },
  "runArgs": [
    "--net=host",
    "-e", "DISPLAY=${env:DISPLAY}"
  ],
  "mounts": [
    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
    "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/../cache/humble/build,target=/home/ws/build,type=bind",
    "source=${localWorkspaceFolder}/../cache/humble/install,target=/home/ws/install,type=bind",
    "source=${localWorkspaceFolder}/../cache/humble/log,target=/home/ws/log,type=bind",
    "source=${localWorkspaceFolder}/../configFiles,target=/home/ws/configFiles,type=bind",
    "source=/home/tim-external/Documents/matlabTestEnvironment,target=/home/ws/matlab,type=bind"
  ],
  "postCreateCommand": "sudo rosdep update && sudo rosdep install --from-paths src --ignore-src -y && sudo chown -R tim-external /home/ws/"
}